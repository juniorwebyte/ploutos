# ============================================
# PLOUTOS LEDGER - VARIÁVEIS DE AMBIENTE
# ============================================
# Copie este arquivo para .env e preencha com seus valores

# ============================================
# AMBIENTE
# ============================================
NODE_ENV=production

# ============================================
# SERVIDOR
# ============================================
PORT=4000
HOST=0.0.0.0
MAX_BODY_SIZE=10485760

# ============================================
# DATABASE (Prisma)
# ============================================
# SQLite (desenvolvimento)
# DATABASE_URL="file:./prisma/dev.db"

# PostgreSQL (produção recomendado)
DATABASE_URL="postgresql://usuario:senha@localhost:5432/ploutosledger?schema=public"

# MySQL/MariaDB (alternativa)
# DATABASE_URL="mysql://usuario:senha@localhost:3306/ploutosledger"

# ============================================
# SEGURANÇA
# ============================================
# IMPORTANTE: Gere uma chave secreta forte para produção!
# Use: openssl rand -base64 32 ou node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION

# CORS - Origem permitida (separar múltiplas origens por vírgula)
# Exemplo: https://meusite.com,https://www.meusite.com
# Use * para permitir qualquer origem (apenas para desenvolvimento)
CORS_ORIGIN=*

# ============================================
# FRONTEND (Vite)
# ============================================
# URL da API backend
VITE_API_BASE_URL=http://localhost:4000
VITE_API_URL=http://localhost:4000

# URL do aplicativo
VITE_APP_DOMAIN=localhost:5173
VITE_APP_PROTOCOL=http

# ============================================
# INTEGRAÇÕES EXTERNAS
# ============================================

# WhatsApp (CallMeBot)
CALLMEBOT_API_KEY=1782254
ADMIN_PHONE=+5511984801839

# ============================================
# PAGAMENTOS (PIX)
# ============================================
# Configure suas chaves de API de pagamento aqui
PIX_API_KEY=
PIX_API_SECRET=

# ============================================
# EMAIL (Opcional - para notificações)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@ploutosledger.com

# ============================================
# LOGS E MONITORAMENTO
# ============================================
LOG_LEVEL=info
ENABLE_LOGGING=true

# ============================================
# CACHE E PERFORMANCE
# ============================================
ENABLE_CACHE=true
CACHE_TTL=3600

# ============================================
# BACKUP
# ============================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30

# ============================================
# PLATAFORMAS DE DEPLOY
# ============================================
# Render
RENDER_ENV=production

# Railway
RAILWAY_ENVIRONMENT=production

